{
  "api_endpoint": "POST /api/chat/send",
  "description": "聊天API接口返回数据结构示例",
  "model_id_handling": {
    "description": "模型ID处理说明",
    "formats": {
      "full_format": {
        "description": "完整格式（推荐）",
        "examples": [
          "mistralai/mistral-7b-instruct",
          "anthropic/claude-3-haiku",
          "google/gemma-7b-it"
        ]
      },
      "truncated_format": {
        "description": "截断格式（自动转换）",
        "examples": [
          "mistral-7b-instruct → 自动转换为 mistralai/mistral-7b-instruct",
          "claude-3-haiku → 自动转换为 anthropic/claude-3-haiku",
          "gemma-7b-it → 自动转换为 google/gemma-7b-it"
        ]
      }
    },
    "auto_conversion": {
      "description": "自动转换逻辑",
      "rules": [
        "如果模型ID不包含 '/'，系统自动查找匹配的完整模型ID",
        "如果找到匹配的完整ID，自动转换并使用",
        "如果未找到匹配的完整ID，使用默认模型",
        "建议始终使用完整的模型ID以避免歧义"
      ]
    }
  },
  "examples": {
    "request_examples": {
      "basic_request": {
        "description": "基本请求（使用默认服务）",
        "request": {
          "message": "你好，请介绍一下React",
          "context": "前端开发学习"
        }
      },
      "openrouter_request_full_model_id": {
        "description": "使用OpenRouter服务（完整模型ID）",
        "request": {
          "message": "你好，请介绍一下JavaScript",
          "context": "前端开发学习",
          "service": "openrouter",
          "model": "mistralai/mistral-7b-instruct"
        }
      },
      "openrouter_request_truncated_model_id": {
        "description": "使用OpenRouter服务（截断模型ID，自动转换）",
        "request": {
          "message": "你好，请介绍一下JavaScript",
          "context": "前端开发学习",
          "service": "openrouter",
          "model": "mistral-7b-instruct"
        },
        "note": "系统会自动转换为 mistralai/mistral-7b-instruct"
      },
      "openrouter_request_other_model": {
        "description": "使用OpenRouter服务（其他模型）",
        "request": {
          "message": "你好，请介绍一下Vue",
          "context": "前端框架学习",
          "service": "openrouter",
          "model": "anthropic/claude-3-haiku"
        }
      },
      "local_request": {
        "description": "使用本地AI服务",
        "request": {
          "message": "你好，请介绍一下Vue",
          "context": "前端框架学习",
          "service": "local"
        }
      }
    },
    "response_examples": {
      "successful_stream": {
        "description": "成功的流式响应示例",
        "stream_data": [
          {
            "data": {
              "message": {
                "content": "你好！"
              },
              "chunk": 1,
              "done": false
            }
          },
          {
            "data": {
              "message": {
                "content": "React"
              },
              "chunk": 2,
              "done": false
            }
          },
          {
            "data": {
              "message": {
                "content": "是一个"
              },
              "chunk": 3,
              "done": false
            }
          },
          {
            "data": {
              "message": {
                "content": "前端框架。"
              },
              "chunk": 4,
              "done": true,
              "fullResponse": "你好！React是一个前端框架。"
            }
          }
        ]
      },
      "error_response": {
        "description": "错误响应示例",
        "error_cases": {
          "model_not_found": {
            "data": {
              "error": true,
              "code": 400,
              "message": "OpenRouter 请求失败: 400 mistral-7b-instruct is not a valid model ID",
              "details": "详细错误信息（仅在开发环境）"
            }
          },
          "service_unavailable": {
            "data": {
              "error": true,
              "code": 503,
              "message": "AI服务不可用，请检查服务配置"
            }
          },
          "rate_limit": {
            "data": {
              "error": true,
              "code": 429,
              "message": "API调用频率超限，请稍后重试"
            }
          },
          "timeout": {
            "data": {
              "error": true,
              "code": 504,
              "message": "AI服务连接超时，请稍后重试"
            }
          },
          "cancelled": {
            "data": {
              "error": true,
              "code": 499,
              "message": "请求已被用户取消"
            }
          }
        }
      }
    },
    "data_structures": {
      "local_ai_format": {
        "description": "本地AI (Ollama) 数据格式",
        "stream_chunk": {
          "message": {
            "content": "文本内容"
          },
          "done": false
        },
        "final_chunk": {
          "message": {
            "content": ""
          },
          "done": true
        }
      },
      "openrouter_format": {
        "description": "OpenRouter 数据格式",
        "stream_chunk": {
          "message": {
            "content": "文本内容"
          },
          "chunk": 1,
          "done": false
        },
        "final_chunk": {
          "message": {
            "content": ""
          },
          "chunk": 10,
          "done": true,
          "fullResponse": "完整的AI回复内容"
        }
      }
    },
